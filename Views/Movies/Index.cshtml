@using FirstProject.Models
@model System.Collections.Generic.List<FirstProject.Models.Movie>


@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Title</th>
        <th scope="col">Genre</th>
    </tr>
    </thead>
    <tbody>

    @if (Model.Count > 0)
    {
        foreach (Movie movie in Model)
        {
            //<a class="card-text" >@customer.Name</a>
            <tr>
                <th scope="row">
                    <div class="d-flex">
                        @movie.Title
                            <a href="@Url.Action("Details", "Movies", new { id = movie.Id })" title="info" class="mx-3">
                            <i class="fa-info-circle fa" aria-hidden="true"></i>
                        </a>
                            <a href="@Url.Action("Edit", "Movies", new { id = movie.Id })" title="modify">
                            <i class="fa-pencil-square-o fa" aria-hidden="true"></i>
                        </a>
                    </div>

                </th>
                <td>@movie.Genre.ToString()</td>
            </tr>

        }
    }
    else
    {

        <h4 >We don't have customers yet.</h4>
    }
    </tbody>
    
</table>


<a href="@Url.Action("New", "Movies" )" title="Add customer">
    <i class="fa-plus-circle fa fa-3x" aria-hidden="true"></i>
</a>
