@using FirstProject.Models
@model System.Collections.Generic.List<FirstProject.Models.Movie>


@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Title</th>
        <th scope="col">Genre</th>
    </tr>
    </thead>
    <tbody>

    @if (Model.Count > 0)
    {
        foreach (Movie movie in Model)
        {
            //<a class="card-text" >@customer.Name</a>
            <tr>
                <th scope="row">
                    @Html.ActionLink($"{movie.Title}", "Details", "Movies", new { id = movie.Id }
                        , new { @class = "card-text" })
                </th>
                <td>@movie.Genre.ToString()</td>
            </tr>

        }
    }
    else
    {

        <h4 >We don't have customers yet.</h4>
    }
    </tbody>
    
</table>