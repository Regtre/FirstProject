@using FirstProject.Models
@model System.Collections.Generic.List<FirstProject.Models.Customer>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover">
<thead>
<tr>
    <th scope="col">Customers</th>
    <th scope="col">Discount</th>
</tr>
</thead>
<tbody>

    @if (Model.Count > 0)
    {
        foreach (Customer customer in Model)
        {
            //<a class="card-text" >@customer.Name</a>
            <tr>
            <th scope="row">
                @Html.ActionLink($"{customer.Name}", "Details", "Customers", new { id = customer.Id }
                    , new { @class = "card-text" })
            </th>
            <td>@customer.MembershipType.Name</td>
            </tr>

        }
    }
    else
    {

        <h4 >We don't have customers yet.</h4>
    }
    </tbody>
    
</table>
