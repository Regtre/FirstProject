@using FirstProject.Models
@model System.Collections.Generic.List<FirstProject.Models.Customer>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Customers</th>
        <th scope="col">Discount</th>
    </tr>
    </thead>
    <tbody>

    @if (Model.Count > 0)
    {
        foreach (Customer customer in Model)
        {
            //<a class="card-text" >@customer.Name</a>
            <tr>
            <th scope="row">
                <div class="d-flex">
                    @customer.Name
                    <a href="@Url.Action("Details", "Customers", new { id = customer.Id })" title="info" class="mx-3">
                        <i class="fa-info-circle fa" aria-hidden="true"></i>
                    </a>
                    <a href="@Url.Action("Edit", "Customers", new { id = customer.Id })" title="modify">
                        <i class="fa-pencil-square-o fa" aria-hidden="true"></i>
                    </a>
                </div>
                    

                </th>
                <td>@customer.MembershipType.Name</td>
            </tr>

        }
    }
    else
    {

        <h4 >We don't have customers yet.</h4>
    }
    </tbody>
    
</table>

<a href="@Url.Action("New", "Customers" )" title="Add customer">
    <i class="fa-plus-circle fa fa-3x" aria-hidden="true"></i>
</a>
